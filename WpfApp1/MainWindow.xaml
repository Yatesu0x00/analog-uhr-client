<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Canvas x:Name="c">
        <Button x:Name="start" Content="Start" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="start_Click" Height="32" Canvas.Left="27" Canvas.Top="60"/>
        <Button x:Name="stop" Content="Stop" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="stop_Click" Canvas.Left="199" Canvas.Top="60" Height="32"/>
        <Label x:Name="lbZahl" Content="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="24" Canvas.Left="27" Canvas.Top="13"/>
        <Button x:Name="reset" Content="Reset" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="reset_Click" Canvas.Left="111" Canvas.Top="60" Height="32"/>

    </Canvas>
</Window>
